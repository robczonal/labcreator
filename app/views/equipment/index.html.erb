<h1>Listing equipment</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Availability</th>
    <th>Height</th>
    <th>Width</th>
    <th>Depth</th>
    <th>Price</th>
    <th>Externallink</th>
    <th>Picture</th>
    <th>Description</th>
    <th>Alert</th>
    <th>Type</th>
    <th>Procedurex</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%= equipment.name %></td>
    <td><%= equipment.availability %></td>
    <td><%= equipment.height %></td>
    <td><%= equipment.width %></td>
    <td><%= equipment.depth %></td>
    <td><%= equipment.price %></td>
    <td><%= equipment.externallink %></td>
    <td><%= equipment.picture %></td>
    <td><%= equipment.description %></td>
    <td><%= equipment.alert %></td>
    <td><%= equipment.type %></td>
    <td><%= link_to 'Show', equipment %></td>
    <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
    <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

