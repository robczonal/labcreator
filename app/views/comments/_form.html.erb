<%= form_for([@project, @project.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Comment %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>